@model Product
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form id="editProduct">
    <input name="ID" type="hidden" value="@Model.ID">
    <br>

    <label>Name</label>
    <input name="Name" value="@Model.Name">
    <br>

    <label>Description</label>
    <input name="Description" value="@Model.Description">
    <br>

    <label>Price</label>
    <input name="Price" value="@Model.Price">
    <br>
    <button id="updateBtn" type="button">Update</button>
</form>

<script>
    $("#updateBtn").click(function () {
        $.ajax({
            type: "POST",
            url: "/Product/Edit",
            data: $("#editProduct").serialize()
        })
            .done(function (response) {
                $("#productTableContainer").html(response);
                $("#productActionContainer").html("");
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("FAILED");
            })
    });
</script>